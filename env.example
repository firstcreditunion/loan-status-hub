# Email Configuration for FCU Loan Status Portal

# AWS SES Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Email Settings
FROM_EMAIL=noreply@fcu.com
FROM_NAME=FCU Loan Status Portal
SUPPORT_EMAIL=support@fcu.com

# Application URLs (used in CSP and email links)
NEXT_PUBLIC_DASHBOARD_URL=https://status.fcu.com

# Optional: SES Configuration Set for email tracking/analytics
AWS_SES_CONFIGURATION_SET=loan-portal-emails

# Supabase Configuration (used in CSP, auth, and database connections)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Intercom Configuration (customer support chat widget)
NEXT_PUBLIC_INTERCOM_APP_ID=your_intercom_app_id

# Environment (automatically set by Next.js and Vercel)
# NODE_ENV=development|production
# VERCEL_URL=auto-generated-by-vercel.vercel.app
