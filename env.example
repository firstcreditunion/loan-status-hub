# Email Configuration for FCU Loan Status Portal

# AWS SES Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Email Settings
FROM_EMAIL=noreply@fcu.com
FROM_NAME=FCU Loan Status Portal
SUPPORT_EMAIL=support@fcu.com

# Application URLs
NEXT_PUBLIC_DASHBOARD_URL=https://status.fcu.com

# Optional: SES Configuration Set for email tracking/analytics
AWS_SES_CONFIGURATION_SET=loan-portal-emails

# Supabase Configuration (if not already configured)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
